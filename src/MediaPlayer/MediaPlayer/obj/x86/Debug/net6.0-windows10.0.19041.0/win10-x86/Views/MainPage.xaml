<Page
    x:Class="MediaPlayer.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <CommandBar DefaultLabelPosition="Right">
                    <AppBarButton x:ConnectionId='4' x:Name="AddButton" Icon="Add" Label="Add"                        />
                    <AppBarButton x:ConnectionId='5' x:Name="ClearButton" Icon="Clear" Label="Clear"                          />
                    <AppBarSeparator></AppBarSeparator>
                    <AppBarButton x:ConnectionId='6' x:Name="NewButton" Icon="Add" Label="New"                        />
                    <AppBarButton x:ConnectionId='7' x:Name="OpenButton" Icon="OpenFile" Label="Open"                         />
                    <AppBarButton x:ConnectionId='8' x:Name="SaveButton" Icon="Save" Label="Save"                         />
                </CommandBar>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xe76c;"/>
                    <TextBox x:ConnectionId='3' x:Name="QueueMedia" Text=""></TextBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
 

